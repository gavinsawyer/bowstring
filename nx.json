{
  "affected":           {
    "defaultBase": "main"
  },
  "namedInputs":        {
    "default":       [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production":    [
      "default"
    ],
    "sharedGlobals": []
  },
  "npmScope":           "standard",
  "targetDefaults":     {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs":    [
        "production",
        "^production"
      ]
    },
    "lint":  {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "accessToken":         "${NX_CLOUD_ACCESS_TOKEN}",
        "cacheableOperations": [
          "lint",
          "browser",
          "server",
          "build"
        ]
      },
      "runner":  "nx-cloud"
    }
  }
}
